{
  "$schema": "https://dev.office.com/json-schemas/spfx-build/config.2.0.schema.json",
  "version": "2.0",
  "bundles": {
    "list-operations-web-part": {
      "components": [
        {
          "entrypoint": "./lib/webparts/listOperations/ListOperationsWebPart.js",
          "manifest": "./src/webparts/listOperations/ListOperationsWebPart.manifest.json"
        }
      ]
    },
    "task-manager-web-part": {
      "components": [
        {
          "entrypoint": "./lib/webparts/taskManager/TaskManagerWebPart.js",
          "manifest": "./src/webparts/taskManager/TaskManagerWebPart.manifest.json"
        }
      ]
    },
    "task-log-web-part": {
      "components": [
        {
          "entrypoint": "./lib/webparts/taskLog/TaskLogWebPart.js",
          "manifest": "./src/webparts/taskLog/TaskLogWebPart.manifest.json"
        }
      ]
    }
  },
  "externals": {
    "jquery": {
      "path": "node_modules/jquery/dist/jquery.min.js",
      "globalName": "jQuery"
    },
    "bootstrap": {
      "path": "node_modules/bootstrap/dist/js/bootstrap.min.js",
      "globalName": "bootstrap"
    }
  },
  "localizedResources": {
    "ListOperationsWebPartStrings": "lib/webparts/listOperations/loc/{locale}.js",
    "ControlStrings": "node_modules/@pnp/spfx-controls-react/lib/loc/{locale}.js",
    "TaskManagerWebPartStrings": "lib/webparts/taskManager/loc/{locale}.js",
    "TaskLogWebPartStrings": "lib/webparts/taskLog/loc/{locale}.js"
  }
}
